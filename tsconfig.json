{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": false,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "moduleResolution": "node",
        "incremental": true,
        "esModuleInterop": true,
        "stripInternal": true,
        "plugins": [
            { "transform": "typescript-transform-paths" }
        ],
        "paths": {
            "@infra/*": [
                "./src/infra/*"
            ],
            "@core/*": [
                "./src/core/*"
            ],
            "@application/*": [
                "./src/application/*"
            ],
            "@config/*": [
                "./src/config/*"
            ],
            "@domain/*": [
                "./src/domain/*"
            ],
            "@tests/*": [
                "./tests/*"
            ],
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "tests",
        "./**/*.spec.ts"
    ],

}
